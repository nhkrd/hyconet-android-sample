<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HCCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/HCCustomTabText</item>
        <item name="tabSelectedTextColor">@color/green</item>
        <item name="tabBackground">@color/gray</item>
    </style>
    <style name="HCCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/darkgray</item>
    </style>

</resources>
